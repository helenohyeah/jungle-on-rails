<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <h3>Receipt for <%= @order.email %></h3>
  <div class="order-summary jumbotron">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @products_ordered.each do | product | %>
          <tr>
            <td>
              <%= image_tag product.image.tiny %>
            </td>
            <td>
              <h4><%= product.name %></h4>
              <br>
              <p><%= product.description %></p>
            </td>
            <td>
              <%= humanized_money_with_symbol product.price %>
            </td>
            <td>
              <%= product.quantity %>
            </td>
            <td>
              <%= humanized_money_with_symbol product.price * product.quantity %>
            </td>
          </tr>
        <% end %>
      </tbody>
      
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= humanized_money_with_symbol cart_subtotal_cents / 100.0 %>
          </th>
        </tr>
      </tfoot>
    </table>

    <h4>Thank you for your order!</h4>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>